<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_bg"
    >

    <include
        android:id="@+id/include"
        layout="@layout/include_title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dip"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarModel"
            style="@style/Add_Car_Edit"
            android:hint="车型" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarTime"
            style="@style/Add_Car_Edit"
            android:hint="上牌时间" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarConfig"
            style="@style/Add_Car_Edit"
            android:hint="车辆配置" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarPro"
            style="@style/Add_Car_Edit"
            android:hint="保险" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarPrice"
            style="@style/Add_Car_Edit"
            android:hint="价格" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarAddress"
            style="@style/Add_Car_Edit"
            android:hint="位置" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mCarOther"
            style="@style/Add_Car_Edit"
            android:hint="其他信息" />

        <GridView
            android:id="@+id/mCarGridPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>